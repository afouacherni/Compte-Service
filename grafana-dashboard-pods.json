{
  "dashboard": {
    "id": null,
    "uid": "compte-service-pods-dashboard",
    "title": "Compte Service - Kubernetes Pods Monitoring",
    "tags": ["spring-boot", "microservice", "compte-service", "kubernetes", "pods"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 6
        },
        "type": "stat",
        "title": "Nombre de Pods Actifs",
        "targets": [
          {
            "expr": "count(up{application=\"compte-service\"})",
            "legendFormat": "Pods actifs",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "yellow"
                },
                {
                  "value": 3,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 6
        },
        "type": "stat",
        "title": "Pods Ready",
        "targets": [
          {
            "expr": "sum(up{application=\"compte-service\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 6
        },
        "type": "table",
        "title": "Liste des Pods",
        "targets": [
          {
            "expr": "up{application=\"compte-service\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "job": true
              }
            }
          }
        ]
      },
      {
        "id": 4,
        "gridPos": {
          "x": 0,
          "y": 6,
          "w": 12,
          "h": 8
        },
        "type": "graph",
        "title": "CPU Usage par Pod (%)",
        "targets": [
          {
            "expr": "process_cpu_usage{application=\"compte-service\"}",
            "legendFormat": "{{kubernetes_pod_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percentunit",
            "label": "CPU %"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 5,
        "gridPos": {
          "x": 12,
          "y": 6,
          "w": 12,
          "h": 8
        },
        "type": "graph",
        "title": "Memory Usage par Pod (MB)",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{application=\"compte-service\"} / 1024 / 1024",
            "legendFormat": "{{kubernetes_pod_name}} - Used",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Memory (MB)"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {
          "x": 0,
          "y": 14,
          "w": 12,
          "h": 8
        },
        "type": "graph",
        "title": "HTTP Requests par Pod (per second)",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{application=\"compte-service\"}[1m])",
            "legendFormat": "{{kubernetes_pod_name}} - {{method}} {{uri}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "gridPos": {
          "x": 12,
          "y": 14,
          "w": 12,
          "h": 8
        },
        "type": "graph",
        "title": "HTTP Response Time par Pod (ms)",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_sum{application=\"compte-service\"}[1m]) / rate(http_server_requests_seconds_count{application=\"compte-service\"}[1m]) * 1000",
            "legendFormat": "{{kubernetes_pod_name}} - {{method}} {{uri}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ms",
            "label": "Response Time"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {
          "x": 0,
          "y": 22,
          "w": 8,
          "h": 8
        },
        "type": "graph",
        "title": "JVM Threads par Pod",
        "targets": [
          {
            "expr": "jvm_threads_live_threads{application=\"compte-service\"}",
            "legendFormat": "{{kubernetes_pod_name}} - Live",
            "refId": "A"
          },
          {
            "expr": "jvm_threads_daemon_threads{application=\"compte-service\"}",
            "legendFormat": "{{kubernetes_pod_name}} - Daemon",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Threads"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 9,
        "gridPos": {
          "x": 8,
          "y": 22,
          "w": 8,
          "h": 8
        },
        "type": "graph",
        "title": "Database Connections par Pod",
        "targets": [
          {
            "expr": "hikaricp_connections_active{application=\"compte-service\"}",
            "legendFormat": "{{kubernetes_pod_name}} - Active",
            "refId": "A"
          },
          {
            "expr": "hikaricp_connections_idle{application=\"compte-service\"}",
            "legendFormat": "{{kubernetes_pod_name}} - Idle",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Connections"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 10,
        "gridPos": {
          "x": 16,
          "y": 22,
          "w": 8,
          "h": 8
        },
        "type": "stat",
        "title": "Uptime par Pod",
        "targets": [
          {
            "expr": "process_uptime_seconds{application=\"compte-service\"}",
            "legendFormat": "{{kubernetes_pod_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "gridPos": {
          "x": 0,
          "y": 30,
          "w": 24,
          "h": 8
        },
        "type": "graph",
        "title": "RÃ©partition de la charge entre les Pods",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{application=\"compte-service\"}[5m])",
            "legendFormat": "{{kubernetes_pod_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          },
          {
            "format": "short"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
