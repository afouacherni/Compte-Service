{
  "dashboard": {
    "id": null,
    "uid": "compte-service-dashboard",
    "title": "Compte Service - Monitoring Dashboard",
    "tags": ["spring-boot", "microservice", "compte-service"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 8,
          "h": 8
        },
        "type": "graph",
        "title": "CPU Usage (%)",
        "targets": [
          {
            "expr": "process_cpu_usage{application=\"compte-service\"}",
            "legendFormat": "CPU Usage",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percentunit",
            "label": "CPU %"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 2,
        "gridPos": {
          "x": 8,
          "y": 0,
          "w": 8,
          "h": 8
        },
        "type": "graph",
        "title": "Memory Usage (MB)",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{application=\"compte-service\"} / 1024 / 1024",
            "legendFormat": "Used Memory (MB)",
            "refId": "A"
          },
          {
            "expr": "jvm_memory_max_bytes{application=\"compte-service\"} / 1024 / 1024",
            "legendFormat": "Max Memory (MB)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Memory (MB)"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 3,
        "gridPos": {
          "x": 16,
          "y": 0,
          "w": 8,
          "h": 8
        },
        "type": "stat",
        "title": "JVM Uptime",
        "targets": [
          {
            "expr": "process_uptime_seconds{application=\"compte-service\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "type": "graph",
        "title": "HTTP Requests (per second)",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{application=\"compte-service\"}[1m])",
            "legendFormat": "{{method}} {{uri}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 5,
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "type": "graph",
        "title": "HTTP Response Time (ms)",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_sum{application=\"compte-service\"}[1m]) / rate(http_server_requests_seconds_count{application=\"compte-service\"}[1m]) * 1000",
            "legendFormat": "{{method}} {{uri}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ms",
            "label": "Response Time"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 8,
          "h": 8
        },
        "type": "stat",
        "title": "Total HTTP Requests",
        "targets": [
          {
            "expr": "sum(http_server_requests_seconds_count{application=\"compte-service\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 1000,
                  "color": "yellow"
                },
                {
                  "value": 5000,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {
          "x": 8,
          "y": 16,
          "w": 8,
          "h": 8
        },
        "type": "stat",
        "title": "HTTP Error Rate (%)",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{application=\"compte-service\",status=~\"5..\"}[5m])) / sum(rate(http_server_requests_seconds_count{application=\"compte-service\"}[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "yellow"
                },
                {
                  "value": 5,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "gridPos": {
          "x": 16,
          "y": 16,
          "w": 8,
          "h": 8
        },
        "type": "graph",
        "title": "Database Connections",
        "targets": [
          {
            "expr": "hikaricp_connections_active{application=\"compte-service\"}",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "hikaricp_connections_idle{application=\"compte-service\"}",
            "legendFormat": "Idle Connections",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Connections"
          },
          {
            "format": "short"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
